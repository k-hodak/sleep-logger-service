						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-User-Id",
						"value": "1"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"timeInBedInterval\": \"2026-02-25T23:00:00/2026-02-26T07:00:00\",\n    \"morningFeeling\": \"GOOD\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/sleep",
					"host": ["{{baseUrl}}"],
					"path": ["api", "sleep"]
				}
			},
