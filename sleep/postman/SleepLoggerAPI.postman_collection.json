{
	"info": {
		"_postman_id": "sleep-logger-api",
		"name": "Sleep Logger API",
		"description": "API collection for testing the Sleep Logger service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Create Sleep Log - Good Feeling",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-User-Id",
						"value": "1"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"bedTime\": \"23:00\",\n    \"wakeTime\": \"07:00\",\n    \"morningFeeling\": \"GOOD\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/sleep",
					"host": ["{{baseUrl}}"],
					"path": ["api", "sleep"]
				}
			},
			"response": []
		},
